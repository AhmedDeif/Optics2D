<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.DefaultCompany.Optics2D.MainActivity"
    android:background="#BDBDBD">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Optics Lab"
        android:id="@+id/txt_OpticsHCI"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_above="@+id/btn_guide"
        android:background="#607D8B"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:paddingTop="125dp"
        android:paddingLeft="110dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Guide"
        android:id="@+id/btn_guide"
        android:onClick="buttonOnClickMainActivity"
        android:paddingTop="0dp"
        android:layout_above="@+id/btn_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundshapebutton"
        android:textColor="#000000" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Start"
        android:id="@+id/btn_start"
        android:background="@drawable/roundshapebutton"
        android:layout_alignParentBottom="true"
        android:onClick="buttonOnClickMainActivity"

        android:layout_alignStart="@+id/btn_guide"
        android:layout_marginBottom="76dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="About Us"
        android:id="@+id/btn_aboutUs"
        android:onClick="buttonOnClickMainActivity"
        android:background="@drawable/roundshapebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_start"
        android:layout_marginBottom="25dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@mipmap/physicslogo2"
        android:layout_above="@+id/btn_guide"
        android:layout_alignStart="@+id/btn_guide"
        android:layout_marginBottom="99dp" />

</RelativeLayout>
